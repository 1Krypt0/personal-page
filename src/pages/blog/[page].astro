---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";
import { getCollection } from "astro:content";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

export async function getStaticPaths({ paginate }) {
  const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );
  return paginate(posts, { pageSize: 5 });
}

const { page } = Astro.props;
---

<BaseLayout description={SITE_DESCRIPTION} title={SITE_TITLE}>
  <main class="md:px-40 xl:px-0 xl:w-2/5 mx-auto text-dark">
    <h1
      class="font-heading text-3xl md:text-6xl pb-16 text-center md:text-start"
    >
      Blog
    </h1>
    <li class="list-none flex flex-col gap-10 text-center md:text-start">
      {page.data.map((post) => <PostCard slug={post.slug} {...post.data} />)}
    </li>
    <section class="flex w-full justify-evenly items-center pt-16">
      {
        page.url.prev ? (
          <a
            href={page.url.prev}
            class="bg-primary text-white w-28 py-3 rounded-lg text-xl text-center"
          >
            Previous
          </a>
        ) : (
          <a
            href={page.url.prev}
            class="bg-primary text-white w-28 py-3 rounded-lg text-xl text-center pointer-events-none"
          >
            Previous
          </a>
        )
      }
      <p>{page.currentPage} of {page.lastPage}</p>
      {
        page.url.next ? (
          <a
            href={page.url.next}
            class="bg-primary  text-white w-28 py-3 rounded-lg text-xl text-center"
          >
            Next
          </a>
        ) : (
          <a
            href={page.url.next}
            class="bg-primary text-white w-28 py-3 rounded-lg text-xl text-center pointer-events-none"
          >
            Next
          </a>
        )
      }
    </section>
  </main>
</BaseLayout>
